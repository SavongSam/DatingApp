<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="338dp"
        android:layout_height="522dp"
        android:layout_margin="22dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/txt_forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/txt_textofforgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_forgotpassword"
            android:layout_centerHorizontal="true"
            android:text="             Please type your Email or
Phone Number to reset your Password!"
            android:layout_marginTop="28dp"/>

        <EditText
            android:id="@+id/etxt_femailorphone"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border"
            android:hint="Email or Phone Number"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_below="@id/txt_textofforgotpassword"
            android:layout_marginTop="20dp"/>
        
        <Button
            android:id="@+id/btn_send"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:text="Send"
            android:layout_alignParentRight="true"
            android:layout_below="@id/etxt_femailorphone"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"/>

    </RelativeLayout>

</LinearLayout>